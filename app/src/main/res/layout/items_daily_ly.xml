<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@color/colorWhite"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_item"
        android:layout_width="384dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="372dp"
            android:layout_height="match_parent"
            android:background="@color/colorLinen"
            android:orientation="horizontal"
            android:padding="1dp">

            <TextView
                android:id="@+id/tv_daily_date"
                android:layout_width="84dp"
                android:layout_height="match_parent"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:textStyle="normal"
                tools:text="01-07-2018" />

            <TextView
                android:id="@+id/tv_daily_store_count"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="right"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                tools:text="170" />

            <TextView
                android:id="@+id/tv_daily_nett"
                android:layout_width="73dp"
                android:layout_height="match_parent"
                android:gravity="right"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                tools:text="252.1" />


            <TextView
                android:id="@+id/tv_daily_nett_ly"
                android:layout_width="66dp"
                android:layout_height="match_parent"
                android:gravity="right"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                tools:text="150.2" />

            <TextView
                android:id="@+id/tv_daily_pct"
                android:layout_width="61dp"
                android:layout_height="match_parent"
                android:gravity="right"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                tools:text="77.2" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>